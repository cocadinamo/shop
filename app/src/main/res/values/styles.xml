<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4B79C8</item>
        <item name="colorPrimaryDark">#293D85</item>
        <item name="colorAccent">@color/plava</item>
